{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for isomorphic React app (MERN)",
  "main": "index.js",
  "scripts": {
    "start": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js | ./node_modules/bunyan/bin/bunyan -o short",
    "start:prod": "cross-env NODE_ENV=production node index.js | ./node_modules/bunyan/bin/bunyan -o short",
    "lint": "eslint src/client src/server",
    "test": "cross-env node_modules/.bin/mocha --require mochaconfig.js --compilers js:babel-core/register src/**/*.spec.js ",
    "watch:test": "npm run test -- --reporter min --watch",
    "cover": "nyc --cache npm test",
    "clean": "rimraf dist",
    "slate": "rimraf node_modules && npm install",
    "build": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=production webpack --config webpack.config.server.js",
    "bs": "npm run clean && npm run build && npm run build:server && npm run start:prod",
    "doc": "./node_modules/apidoc/bin/apidoc -i ./src/server/"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [],
  "author": "Carlos Arantes <carantes.ferreira@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "apidoc": "^0.16.1",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-loaders": "^0.7.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-native-modules": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chunk-manifest-webpack-plugin": "^0.1.0",
    "cross-env": "^2.0.1",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^2.11.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.3.0",
    "eslint-plugin-react": "^5.1.1",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.20.2",
    "expect-jsx": "^2.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "jsx-chai": "^4.0.0",
    "mocha": "^3.0.2",
    "nodemon": "^1.9.2",
    "nyc": "^8.1.0",
    "postcss-loader": "^0.13.0",
    "pre-commit": "^1.1.3",
    "react-a11y": "^0.3.3",
    "react-addons-test-utils": "^15.3.1",
    "react-hot-loader": "^3.0.0-beta.3",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.7.0",
    "webpack-dev-server": "^1.15.1",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "compression": "^1.6.2",
    "cuid": "^1.3.8",
    "isomorphic-fetch": "^2.2.1",
    "limax": "^1.4.0",
    "mongoose": "^4.6.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "sanitize-html": "^1.13.0"
  },
  "nyc": {
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js",
      "src/client/modules/App/components/DevTools.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": true
  },
  "apidoc": {
    "title": "MEAN API Documentation",
    "url" : "https://api.github.com/v1"
  }
}
